      "name": "Verify OTP & Signup",
      "description": null,
      "actions": [
        {
          "id": "verifyOtp",
          "allowFailure": false,
          "type": "OTP",
          "action": "VERIFY_CODE",
          "params": {
            "reference": "{{input.body.email}}",
            "code": "{{input.body.verification_code}}"
          },
          "alias": null,
          "notes": null
