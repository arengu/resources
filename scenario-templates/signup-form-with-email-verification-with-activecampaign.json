        {
          "alias": "Is it valid?",
          "id": "ifThenCondition_znW2",
          "allowFailure": false,
          "type": "FLOW",
          "action": "BOOLEAN_CONDITION",
          "params": {
            "evaluate": {
              "operator": "AND",
              "operands": [
                {
                  "operator": "EQ",
                  "operands": [
                    "{{verifyOtp.valid}}",
                    true
                  ]
                }
              ]
            },
            "then": [
              {
                "id": "signup",
                "alias": "Signup with custom API",
                "allowFailure": false,
                "notes": null,
                "type": "HTTP",
                "action": "SEND_REQUEST",
                "params": {
                  "url": "https://custom.demos.arengu.com//signup",
                  "method": "POST",
                  "headers": {
                    "Authorization": "Bearer JnUjNjUmZWZLTW93NjFkOG8zeFRlI3NYbWphem5GZSZIMXlFSmVZeVlMRk03XjhCTGRBQUBAOEtvJDlGdnRNRg"
                  },
                  "params": {},
                  "type": "JSON",
                  "body": {
                    "sub": "{{input.body.email ?? input.body.social.profile.email}}",
                    "password": "{{input.body.password ?? undefined}}",
                    "meta": {
                      "firstname": "{{input.body.firstname}}"
                    }
                  },
                  "connectionId": null,
                  "acceptNOK": false,
                  "basic": null
                }
              },
              {
                "id": "checkSignup",
                "alias": "Is it success?",
                "allowFailure": false,
                "notes": null,
                "type": "FLOW",
                "action": "BOOLEAN_CONDITION",
                "params": {
                  "evaluate": {
                    "operator": "AND",
                    "operands": [
                      {
                        "operator": "EQ",
                        "operands": [
                          "{{signup.success}}",
                          true
                        ]
                      }
                    ]
                  },
                  "then": [
                    {
                      "id": "storeState_ueyc",
                      "alias": "Store data for ending screen",
                      "allowFailure": false,
                      "notes": null,
                      "type": "FLOW",
                      "action": "STORE_STATE",
                      "params": {
                        "data": {
                          "redirectionUrl": "{{signup.body.claim_url}}"
                        }
                      }
                    },
                    {
                      "id": "submitForm_bY7l",
                      "alias": "Go to ending screen",
                      "allowFailure": false,
                      "notes": null,
                      "type": "FLOW",
                      "action": "SUBMIT_FORM",
                      "params": {
                        "endingScreen": true
                      }
                    }
                  ],
                  "otherwise": [
                    {
                      "id": "returnError_sZYD",
                      "allowFailure": false,
                      "alias": null,
                      "notes": null,
                      "type": "FLOW",
                      "action": "ERROR_MESSAGE",
                      "params": {
                        "message": "{{signup.body.error_message}}"
                      }
                    }
                  ]
                }
              }
            ],
            "otherwise": [
              {
                "id": "showErrorMessage_IXGP",
                "allowFailure": false,
                "type": "FLOW",
                "action": "ERROR_MESSAGE",
                "params": {
